@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container text-center">
    <h1>Emular MMU</h1>
    <p>Aquí podrás emular los algoritmos de paginación y analizar el rendimiento del sistema.</p>
</div>

<div class="container">
    <h1>Simulación de Algoritmos de Paginación</h1>
    <form id="paginationForm" method="post" action="/MMU/RunAlgorithm">
        <div class="form-group">
            <label for="pages">Secuencia de Páginas (separadas por comas):</label>
            <input type="text" class="form-control" id="pages" name="pages" placeholder="Ejemplo: 1,2,3,1,4,5" required>
        </div>
        <div class="form-group">
            <label for="frames">Número de Marcos:</label>
            <input type="number" class="form-control" id="frames" name="frames" placeholder="Ejemplo: 3" required>
        </div>
        <div class="form-group">
            <label for="algorithm">Seleccionar Algoritmo:</label>
            <select class="form-control" id="algorithm" name="algorithm">
                <option value="FIFO">FIFO</option>
                <option value="Optimal">Óptimo</option>
                <option value="NRU">NRU</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Ejecutar Algoritmo</button>
    </form>
</div>
